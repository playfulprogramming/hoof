{
	"name": "@playfulprogramming/github-api",
	"private": true,
	"version": "0.0.1",
	"type": "module",
	"main": "src/index.ts",
	"scripts": {
		"test:eslint": "eslint ./src",
		"test:build": "publint --strict",
		"build:openapi": "openapi-typescript 'https://raw.githubusercontent.com/github/rest-api-description/refs/heads/main/descriptions/api.github.com/dereferenced/api.github.com.2022-11-28.deref.json' -o src/generated/schema.d.ts",
		"build": "tsc --noEmit"
	},
	"dependencies": {
		"@playfulprogramming/common": "workspace:*",
		"openapi-fetch": "catalog:",
		"undici": "catalog:"
	},
	"devDependencies": {
		"openapi-typescript": "catalog:",
		"vitest": "catalog:"
	}
}
